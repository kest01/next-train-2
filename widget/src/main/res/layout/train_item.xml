<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="81dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp" android:layout_marginTop="6dp"
    android:layout_marginRight="1dp" android:layout_marginBottom="1dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_time"
        android:id="@+id/time" android:textSize="6pt"
        android:layout_gravity="center_horizontal"
        android:lines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_from"
        android:id="@+id/from"
        android:textSize="6pt"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:lines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_to"
        android:id="@+id/to"
        android:textSize="6pt"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:lines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_time_left"
        android:id="@+id/remain" android:textSize="6pt"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>